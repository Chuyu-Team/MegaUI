<MegaUI>
    <StyleSheets>
        <StyleSheet ResourceID="MyStyleSheet">
            <Class Equal="背景蓝色变原谅色">
                <Default>
                    <Element BorderStyle="Solid" Background="RGB(0, 128, 192)" />
                </Default>
                <MouseFocused Equal="true">
                    <!--允许使用ARBG-->
                    <Element BorderStyle="Sunken" Background="ARGB(255, 0, 0, 0)" />
                </MouseFocused>
                <MouseWithin Equal="true">
                    <Element BorderStyle="Raised" Background="RGB(0, 255, 128)" />
                </MouseWithin>

            </Class>
            <Class Equal="背景黄变黑">
                <Default>
                    <Element BorderStyle="Solid" Background="RGB(0xFF, 242, 0)" />
                </Default>
                <MouseFocused Equal="true">
                    <!--允许使用ARBG-->
                    <Element BorderStyle="Sunken" Background="ARGB(255, 0, 0, 0)" />
                </MouseFocused>
                <MouseWithin Equal="true">
                    <!--允许使用ARBG-->
                    <Element BorderStyle="Sunken" Background="ARGB(128, 0, 0, 0)" />
                </MouseWithin>
            </Class>
            <Default>
                <Element BorderStyle="Solid"/>
            </Default>
            <MouseWithin Equal="true">
                <Element BorderStyle="Sunken" Background="RGB(128, 0, 255)" />
            </MouseWithin>
        </StyleSheet>
    </StyleSheets>
    <Windows>
        <WindowElement ResourceID="测试窗口" Title="MegaUI Test" Height="600rp" Width="800rp" Background="RGB(255, 0, 0)" Sheet="MyStyleSheet">
            <Element LayoutPos="Absolute" X="100rp" Y="100rp" Height="400rp" Width="300rp" Background="ARGB(128, 255, 255, 0)"
                     Content="聊天止到底的观对方的嘀咕嘀咕嘀咕嘀咕的嘀咕嘀咕的点的地方的于呵呵"
                     Font="Font('宋体', 20pt, Normal, 0, RGB(50,0,0))"
                     ContentAlign="Middle | EndEllipsis"/>
            <Element LayoutPos="Absolute" X="300rp" Y="305rp" Height="400rp" Width="300rp" Background="ARGB(32, 255, 255, 0)" BorderThickness="Rect(2rp, 4rp, 6rp, 8rp)" BorderColor="ARGB(255, 163, 73, 164)"/>
            <Element LayoutPos="Absolute" X="150rp" Y="155rp" Height="50rp" Width="40rp" Class="背景黄变黑" BorderThickness="Rect(2rp, 4rp, 6rp, 8rp)" BorderColor="ARGB(255, 255, 0, 0)" Active="Mouse"/>
            <Element LayoutPos="Absolute" X="450rp" Y="205rp" Height="50rp" Width="40rp" Class="背景蓝色变原谅色" BorderThickness="Rect(2rp, 4rp, 6rp, 8rp)" BorderColor="ARGB(255, 255, 128, 192)" Active="Mouse"/>
        </WindowElement>
    </Windows>
</MegaUI>