        <StyleSheet ResourceID="MyStyleSheet">
            <Class Equal="背景蓝色变原谅色">
                <Default>
                    <Element BorderStyle="Solid" Background="RGB(0, 128, 192)" />
                </Default>
                <MouseFocused Equal="true">
                    <!--允许使用ARBG-->
                    <Element BorderStyle="Sunken" Background="ARGB(255, 0, 0, 0)" />
                </MouseFocused>
                <MouseWithin Equal="true">
                    <Element BorderStyle="Raised" Background="RGB(0, 255, 128)" />
                </MouseWithin>

            </Class>
            <Class Equal="背景黄变黑">
                <Default>
                    <Element BorderStyle="Solid" Background="RGB(0xFF, 242, 0)" />
                </Default>
                <MouseFocused Equal="true">
                    <!--允许使用ARBG-->
                    <Element BorderStyle="Sunken" Background="ARGB(255, 0, 0, 0)" />
                </MouseFocused>
                <MouseWithin Equal="true">
                    <!--允许使用ARBG-->
                    <Element BorderStyle="Sunken" Background="ARGB(128, 0, 0, 0)" />
                </MouseWithin>
            </Class>
            <Default>
                <Element BorderStyle="Solid"/>
            </Default>
            <MouseWithin Equal="true">
                <Element BorderStyle="Sunken" Background="RGB(128, 0, 255)" />
            </MouseWithin>
        </StyleSheet>
